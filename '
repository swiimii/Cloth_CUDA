#include "Graphics.hpp"

Vector4 cameraEye = { .x = { -15.0, 100.0, 15.0, 1.0 } };
Vector4 cameraAt = { .x = { 0.0, 0.0, 0.0, 1.0 } };

void graphicsStart(int* argc, char** argv) {
	glutInit(argc, argv);
	glEnable(GL_DEPTH_TEST);
	glDepthFunc(GL_LESS);
	glutInitDisplayMode(GLUT_RGB | GLUT_DOUBLE | GLUT_DEPTH);

	glutCreateWindow("simple");
	glutDisplayFunc(myGlutDisplayFunc);
	glutIdleFunc(myGlutIdleFunc);
	glutKeyboardFunc(myGlutKeyboardFunc);

	glutMainLoop();
}

void myGlutDisplayFunc() {
	while(!rendering);
	glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT);

	gluLookAt(
		cameraEye.x[0],cameraEye.x[1],cameraEye.x[2],
		cameraAt.x[0],cameraAt.x[1],cameraAt.x[2],
		0,1,0
	);
	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();
	gluPerspective(145,1.0,1.0,1000.0);

	glBegin(GL_POINTS);
	glColor4f(1.0, 1.0, 1.0, 1.0);
	for(size_t i = 0; i < particleCount; ++i)
		glVertex4dv(readPositions[i].x);
	glEnd();

	glutSwapBuffers();
	rendering = false;
}

void myGlutIdleFunc() {
	glutPostRedisplay();
}

void myGlutKeyboardFunc(unsigned char key, int x, int y) {
	switch(key) {
	case 27:
	case 'q':
		exit(0);
	default:
		break;
	}
}
